			</snapshots>
		</repository>  -->

		<!-- JRE repositary -->
<!-- 		<repository>
			<id>justj</id>
			<url>https://download.eclipse.org/justj/jres/11/updates/release/latest/</url>
			<layout>p2</layout>
		</repository> -->

	</repositories>

	<!-- Properties -->
	<properties>

		<!-- Eclipse target version  -->
		<eclipse.target.version>4.25.0</eclipse.target.version>

		<!-- Source encoding -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- Plugins versions settings -->
		<tycho.version>3.0.1</tycho.version>
		<tycho.surefire.version>3.0.1</tycho.surefire.version>

	</properties>

	<!-- Report generation (used by the goal site -->
	<reporting>
		<plugins>
		</plugins>
	</reporting>

	<dependencyManagement>
		<dependencies>
		
			<!-- https://mvnrepository.com/artifact/org.eclipse.tycho/tycho-p2-publisher-plugin -->
			<dependency>
			    <groupId>org.eclipse.tycho</groupId>
			    <artifactId>tycho-p2-publisher-plugin</artifactId>
			    <version>${tycho.version}</version>
			</dependency>	
		
		</dependencies>
	</dependencyManagement>

	<build>

		<!-- PLugins needed for the build -->
		<pluginManagement>
			<plugins>
			</plugins>
		</pluginManagement>

		<plugins>

			<!-- Creates a jar-based plugin and attaches it as an artifact -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<archive>
						<!-- which indicates whether the generated archive will contain the 
							pom.xml and pom.properties file -->
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
				</configuration>
			</plugin>

			<!-- Permet d'ajouter les fonctionalitÃ© de creation de plugins eclipse -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho.version}</version>
				<extensions>true</extensions>
			</plugin>

			<!--  Definition of the Eclipse platform for the applciation -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<executionEnvironment>JavaSE-17</executionEnvironment>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<target>
						<artifact>
							<groupId>org.bpy.electronics.mc6809</groupId>
							<artifactId>Eclipse-2022-09</artifactId>
							<version>${eclipse.target.version}</version>
						</artifact>
					</target>
					<environments>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>